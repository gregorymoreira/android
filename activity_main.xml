<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="App do Trabalho 2 - Gregory H M S Pereira\nMatrícula: 161057600020\n"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para adicionar os objetos do tipo disciplina, insira os dados corretamente e clique no botao +"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Para exibir a lista criada com ListView clique no botão Exibe ListView.\nPara exibir a lista criada com GridView clique no botão Exibe GridView."/>

    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content" 
        android:hint="Código"
        android:id="@+id/edtCodigo"/>
    <EditText
        android:layout_width="200dp"
        android:layout_height="wrap_content" 
        android:hint="Descrição"
        android:id="@+id/edtDescricao"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
            <EditText
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:hint="Carga Horária"
                android:id="@+id/edtCargaHoraria"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+"
                android:id="@+id/btnAdicionarObjetoLista"/>

    </LinearLayout>
    


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exibeListView"
        android:id="@+id/btnExibeListView"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/exibeGridView"
        android:id="@+id/btnExibeGridView"/>

</LinearLayout>